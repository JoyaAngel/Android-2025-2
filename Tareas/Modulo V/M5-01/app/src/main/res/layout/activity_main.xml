<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvFibonacci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fibonacci"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvFibonacciIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Índice: 0"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvFibonacciIterative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iterativo: 0"
            android:textSize="18sp"
            android:textColor="#388E3C"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tvFibonacciRecursive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recursivo: 0"
            android:textSize="18sp"
            android:textColor="#D32F2F"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRetroceso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retroceso"/>

            <Button
                android:id="@+id/btnAvance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avance"
                android:layout_marginStart="16dp"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>