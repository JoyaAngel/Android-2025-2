<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".Ejercicio">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultado"
        android:text="1000000000"
        android:textSize="80dp"
        android:lines="1"
        android:background="@color/white"
        android:gravity="end"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:id="@+id/suma"
        android:layout_below="@id/resultado"
        android:layout_alignEnd="@id/resultado"
        android:backgroundTint="#FFC107"
        android:text="+"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/resta"
        android:layout_below="@id/suma"
        android:layout_alignEnd="@id/suma"
        android:backgroundTint="#FFC107"
        android:text="-"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/multiplicacion"
        android:layout_below="@id/resta"
        android:layout_alignEnd="@id/resta"
        android:backgroundTint="#FFC107"
        android:text="*"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/division"
        android:layout_below="@id/multiplicacion"
        android:layout_alignEnd="@id/suma"
        android:backgroundTint="#FFC107"
        android:text="/"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/igual"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@id/suma"
        android:backgroundTint="#FFC107"
        android:text="="
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/siete"
        android:layout_alignTop="@id/suma"
        android:layout_alignParentStart="true"
        android:text="7"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:id="@+id/ocho"
        android:layout_alignTop="@id/suma"
        android:layout_toEndOf="@id/siete"
        android:text="8"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:id="@+id/nueve"
        android:layout_alignTop="@id/suma"
        android:layout_toEndOf="@id/ocho"
        android:text="9"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cuatro"
        android:layout_alignTop="@id/resta"
        android:layout_alignParentStart="true"
        android:text="4"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:id="@+id/cinco"
        android:layout_alignTop="@id/resta"
        android:layout_toEndOf="@id/cuatro"
        android:text="5"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:id="@+id/seis"
        android:layout_alignTop="@id/resta"
        android:layout_toEndOf="@id/cinco"
        android:text="6"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uno"
        android:layout_alignTop="@id/multiplicacion"
        android:layout_alignParentStart="true"
        android:text="1"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:id="@+id/dos"
        android:layout_alignTop="@id/multiplicacion"
        android:layout_toEndOf="@id/uno"
        android:text="2"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:id="@+id/tres"
        android:layout_alignTop="@id/multiplicacion"
        android:layout_toEndOf="@id/dos"
        android:text="3"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cero"
        android:layout_alignTop="@id/division"
        android:layout_toEndOf="@id/uno"
        android:text="0"
        android:textSize="30dp"/>

</RelativeLayout>